extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each cotage in cotages
          .col-xs-12.list-group-item
            h4 
              a(href="/cotage")= cotage.name
              small &nbsp;
                +outputRating(cotage.rating)
              span.badge.pull-right.badge-default= cotage.minstay
              span.label.pull-right.label Min stay in days 
            p.address= cotage.address
            p
              each facility in cotage.facilities
                span.label.label-warning= facility
                | &nbsp;
    .col-xs-12.col-sm-4 
      p.lead= sidebar
      